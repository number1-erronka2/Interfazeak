        </div>
        <div class="carousel-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Jokoa" asp-route-id="3"><img class="d-block w-100" src="~/images/banner3.jpg" alt="Third slide"></a>
        </div>
        <div class="carousel-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Jokoa" asp-route-id="4"><img class="d-block w-100" src="~/images/banner3.jpg" alt="Fourth slide"></a>
        </div>


        


    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
