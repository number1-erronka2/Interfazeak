            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Jokoa" asp-route-id="1"><img class="d-block w-100" src="~/images/banner1.jpg" alt="First slide"></a>
        </div>
        <!--hau prozesetan dan lekun ipini joko bakotxan ixena, eta ez datu basetik hartute-->
